<div class="cyber-container">
	<div class="cyber-background">
		<div class="grid-overlay"></div>
		<div class="scan-line"></div>
		<div class="noise-overlay"></div>
	</div>
	
	<main class="cyber-content">
		<slot />
	</main>
</div>

<style>
	:root {
		--terminal-bg: #282a36;
		--terminal-header: #1e1f29;
		--terminal-text: #f8f8f2;
		--terminal-dim: #6272a4;
		--terminal-accent: #8be9fd;
		--terminal-success: #50fa7b;
		--terminal-warning: #f1fa8c;
		--terminal-error: #ff5555;
	}
	
	.cyber-container {
		position: relative;
		min-height: 100vh;
		padding: 2rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		overflow: hidden;
	}
	
	.cyber-background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: #0a0a0f;
		z-index: -2;
	}
	
	.grid-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: 
			linear-gradient(rgba(139, 233, 253, 0.05) 1px, transparent 1px),
			linear-gradient(90deg, rgba(139, 233, 253, 0.05) 1px, transparent 1px);
		background-size: 50px 50px;
		z-index: -1;
	}
	
	.scan-line {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			to bottom,
			transparent 0%,
			rgba(139, 233, 253, 0.05) 50%,
			transparent 100%
		);
		background-size: 100% 4px;
		animation: scanline 6s linear infinite;
		z-index: -1;
	}
	
	.noise-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
		opacity: 0.05;
		z-index: -1;
	}
	
	.cyber-content {
		width: 100%;
		max-width: 1200px;
		z-index: 1;
	}
	
	/* Glitch transition effect */
	body.glitch-transition::after {
		content: "";
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(139, 233, 253, 0.1);
		z-index: 9999;
		pointer-events: none;
		animation: glitchTransition 1s ease-out forwards;
	}
	
	@keyframes scanline {
		0% {
			background-position: 0 0;
		}
		100% {
			background-position: 0 100%;
		}
	}
	
	@keyframes glitchTransition {
		0% {
			opacity: 0;
		}
		10% {
			opacity: 1;
			background-color: rgba(139, 233, 253, 0.2);
			clip-path: inset(10% 0 90% 0);
		}
		20% {
			clip-path: inset(80% 0 10% 0);
			background-color: rgba(80, 250, 123, 0.2);
		}
		30% {
			clip-path: inset(30% 0 60% 0);
			background-color: rgba(255, 85, 85, 0.2);
		}
		40% {
			clip-path: inset(50% 0 30% 0);
			background-color: rgba(241, 250, 140, 0.2);
		}
		50% {
			clip-path: inset(0% 0 100% 0);
			background-color: rgba(139, 233, 253, 0.2);
		}
		60% {
			clip-path: inset(100% 0 0% 0);
			background-color: rgba(80, 250, 123, 0.2);
		}
		70% {
			clip-path: inset(40% 0 60% 0);
			background-color: rgba(255, 85, 85, 0.2);
		}
		80% {
			clip-path: inset(80% 0 10% 0);
			background-color: rgba(241, 250, 140, 0.2);
		}
		100% {
			opacity: 0;
			clip-path: inset(0 0 0 0);
		}
	}
	
	@media (max-width: 768px) {
		.cyber-container {
			padding: 1rem;
		}
	}
</style>
