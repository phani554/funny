<div class="cyber-container">
  <div class="cyber-background"></div>
  <div class="cyber-content">
    <slot />
  </div>
</div>

<style>
  :root {
    --terminal-bg: #282a36;
    --terminal-header: #1e1f29;
    --terminal-text: #f8f8f2;
    --terminal-dim: #6272a4;
    --terminal-accent: #8be9fd;
    --terminal-success: #50fa7b;
    --terminal-warning: #f1fa8c;
    --terminal-error: #ff5555;
  }
  
  .cyber-container {
    min-height: 100vh;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    position: relative;
    background-color: #0a0a0a;
    overflow: hidden;
  }
  
  .cyber-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      linear-gradient(to bottom, rgba(10, 10, 10, 0.8), rgba(10, 10, 10, 0.9)),
      url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%231a1a1a' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    z-index: 0;
    opacity: 0.8;
  }
  
  .cyber-background::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 20% 30%, rgba(139, 233, 253, 0.1) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(80, 250, 123, 0.1) 0%, transparent 40%);
  }
  
  .cyber-content {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 1200px;
  }
  
  /* Glitch transition effect */
  body.glitch-transition::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    z-index: 9999;
    animation: glitchTransition 1s forwards;
  }
  
  @keyframes glitchTransition {
    0% {
      opacity: 0;
    }
    10% {
      opacity: 0.8;
    }
    20% {
      opacity: 0.2;
    }
    30% {
      opacity: 0.9;
    }
    40% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.7;
    }
    60% {
      opacity: 0.3;
    }
    70% {
      opacity: 0.8;
    }
    80% {
      opacity: 0.1;
    }
    90% {
      opacity: 0.5;
    }
    100% {
      opacity: 0;
    }
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .cyber-container {
      padding: 1rem;
    }
  }
</style>
